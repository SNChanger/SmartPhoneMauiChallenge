<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartPhoneMauiChallenge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartPhoneMauiChallenge"
    Shell.FlyoutBehavior="Disabled">

   <TabBar>
        <ShellContent
            Title="personal memo"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_notes" />
        <ShellContent
            Title="List of medicines"
            ContentTemplate="{DataTemplate local:ItemList}"
            Icon="icon_about" />
        <ShellContent
            Title="Find a facility"
            ContentTemplate="{DataTemplate local:HospitalSearch}"
            Icon="icon_notes" />
        <ShellContent
            Title="Input result of medical examination"
            ContentTemplate="{DataTemplate local:ReviewData}"
            Icon="icon_notes" />

    </TabBar>

</Shell>
